# Git
alias g='git'

# Grep
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'
alias lgrep='grep -P'

# ls
alias ls='exa'
alias lt='ls -schanged -l'
alias lz='ls -ssize -l'

# Other common utils
alias diff='diff --color=auto'
alias cp='cp -iv'
alias mv='mv -iv'
alias rm='rm -v'
alias mkdir='mkdir -pv'
alias less='less -FRXc'

# DNF
alias dfi='sudo dnf install'
alias dfs='sudo dnf search'
alias dfr='sudo dnf remove'
alias dfu='sudo dnf upgrade'
alias dfii='sudo dnf --setopt=install_weak_deps=False install'
alias dfuu='sudo dnf --setopt=install_weak_deps=False upgrade'

alias tldr='tldr -p'
alias ytdl='youtube-dl'

alias hd='hexdump -C'
alias dud='du -d1 -h'
alias duf='du -sh *'
alias nano='nano -W'
alias wget='wget -c'
alias bc='bc --mathlib --quiet'
alias fd='fd -I'

# Vim
alias vim='nvim'

# Emacs
alias ef="emacsclient -nc -a ''"
alias et="emacsclient -t -a ''"
alias -g eff="emacsclient -nc -a ''"
alias -g ett="emacsclient -t -a ''"
alias -g efff="emacs"
alias -g ettt="emacs -nw"
alias -g e="emacsclient -t -a ''"

alias cal3='cal -3'
alias today='date "+%A, %B %-d, %Y"'
alias weeknum='date +%V'

alias myip='dig @resolver4.opendns.com myip.opendns.com +short' 
alias myip4='dig @resolver4.opendns.com myip.opendns.com +short -4'
alias myip6='dig @resolver1.ipv6-sandbox.opendns.com AAAA myip.opendns.com +short -6'
